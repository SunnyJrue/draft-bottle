/*模态窗口  */
.modal{
    width: 100%;
    height: 100%;
}
.innerModal{
    position: absolute;
    top:0;
    left:0;
     width: 100%;
    height: 100%;
    background: #222;
     opacity: 0.7;
}
.throwBottle{
     height: 100%;
     width:100%;
    padding:20px;
     box-sizing: border-box; 
}
.throwBottle image{
    width: 90%;
    height: 90%;
    position: absolute;
}
.throwBottle textarea{
    height: 100%;
    width:100%;
    padding:20px;
    box-sizing: border-box;
}
